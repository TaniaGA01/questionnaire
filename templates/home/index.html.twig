{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<section class="h-[90%] overflow-y-auto snap-y snap-mandatory">
    {# <div class="h-full snap-start bg-gray-800">Section</div> #}
     <div 
        id="scroll-section"
        class="h-full snap-start bg-gray-100 overflow-y-auto flex p-20"
        data-controller="scroll-lock"
     >
        <div id class="w-[25%] flex flex-col justify-between px-5">
            <a href="#btsBlock" 
                class="text-blue-600 hover:text-white hover:bg-blue-600 border-gray-100 hover:border-blue-600 rounded-xl border-2"
                data-action="click->scroll-lock#clickToScrollBlock"
                data-scroll-lock-target="formationLink">
                <div class="p-2">
                    <div class="flex items-start">
                        <div class="mr-2">
                            {{ ux_icon('garden:bot-generic-26', {
                                height:'30px', 
                                width:'30px', 
                                'aria-hidden': true,
                            }) }}
                        </div>
                        <div class="">
                            <h2 class="uppercase items-center font-bold text-xl ">Les BTS</h2> 
                            <h3 class="font-light text-sm">les plus recherchés</h3>
                        </div>
                    </div>
                </div>
            </a>
            <a href="#licencesBlock" 
                class="text-gray-400"
                data-action="click->scroll-lock#clickToScrollBlock"
                data-scroll-lock-target="formationLink">
                <div class="p-2">
                    <div class="flex items-start">
                        <div class="mr-2">
                            {{ ux_icon('ion:rocket', {
                                height:'28px', 
                                width:'28px', 
                                'aria-hidden': true,
                            }) }}
                        </div>
                        <div class="">
                            <h2 class="uppercase items-center font-bold text-xl ">Les Licences</h2> 
                            <h3 class="font-light text-sm">les plus recherchés</h3>
                        </div>
                    </div>
                </div>
            </a>
            <a href="#mastersBlock" 
                class="text-gray-400"
                data-action="click->scroll-lock#clickToScrollBlock"
                data-scroll-lock-target="formationLink">
                <div class="p-2">
                    <div class="flex items-start">
                        <div class="mr-2">
                            {{ ux_icon('eos-icons:master', {
                                height:'28px', 
                                width:'28px', 
                                'aria-hidden': true,
                            }) }}
                        </div>
                        <div class="">
                            <h2 class="uppercase items-center font-bold text-xl ">Les Masters</h2> 
                            <h3 class="font-light text-sm">les plus recherchés</h3>
                        </div>
                    </div>
                </div>
            </a>
            <a href="#diplomesFiliereBlock" 
                class="text-gray-400"
                data-action="click->scroll-lock#clickToScrollBlock"
                data-scroll-lock-target="formationLink">
                <div class="p-2">
                    <div class="flex items-start">
                        <div class="mr-2">
                            {{ ux_icon('mdi:book-education', {
                                height:'28px', 
                                width:'28px', 
                                'aria-hidden': true,
                            }) }}
                        </div>
                        <div class="">
                            <h2 class="uppercase items-center font-bold text-xl ">Les diplômes par filière</h2> 
                            <h3 class="font-light text-sm">les plus recherchés</h3>
                        </div>
                    </div>
                </div>
            </a>
            <a href="#typesEtablissementBlock" 
                class="text-gray-400"
                data-action="click->scroll-lock#clickToScrollBlock"
                data-scroll-lock-target="formationLink">
                <div class="p-2">
                    <div class="flex items-start">
                        <div class="mr-2">
                            {{ ux_icon('teenyicons:school-solid', {
                                height:'28px', 
                                width:'28px', 
                                'aria-hidden': true,
                            }) }}
                        </div>
                        <div class="">
                            <h2 class="uppercase items-center font-bold text-xl ">Les types d'établissements</h2> 
                            <h3 class="font-light text-sm">les plus recherchés</h3>
                        </div>
                    </div>
                </div>
            </a>
            <a href="#formationFiliereBlock" 
                class="text-gray-400"
                data-action="click->scroll-lock#clickToScrollBlock"
                data-scroll-lock-target="formationLink">
                <div class="p-2">
                    <div class="flex items-start">
                        <div class="mr-2">
                            {{ ux_icon('eos-icons:network-policy', {
                                height:'28px', 
                                width:'28px', 
                                'aria-hidden': true,
                            }) }}
                        </div>
                        <div class="">
                            <h2 class="uppercase items-center font-bold text-xl ">Les formations par filière</h2> 
                            <h3 class="font-light text-sm">les plus recherchées</h3>
                        </div>
                    </div>
                </div>
            </a>        
        </div>
        <figure 
            class="flex flex-col gap-1 rounded-xl w-[75%] bg-white">
            <div 
                class="not-prose overflow-auto rounded-lg h-full"
            >
                <div id="formationsBlock" class="h-full sm:py-52 2xl:py-96 overflow-y-auto px-5"
                data-action="scroll->scroll-lock#scrollBlock"
                >
                    <div id="btsBlock" class="transition-all duration-500 ease-in-out my-30">
                        <div class="flex flex-wrap content-center">
                            {% for bts in formations.bts %}
                                <div class="m-1">
                                    <button class="rounded-full text-bas font-medium justify-end align-middle border-2 py-1.5 px-4 border-blue-600  text-blue-600 hover:bg-blue-600 hover:text-blue-200"
                                    >
                                    <small>{{ bts.name }}</small>
                                    </button>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="mt-5">
                            <a href="#" class="text-sm font-bold flex justify-end align-middle text-teal-500  hover:text-teal-200 left-3 bottom-3">
                                Voir tous les BTS
                                {{ ux_icon('gravity-ui:arrow-right', {
                                height: '20px', 
                                width: '20px', 
                                'aria-hidden': true,
                                'class': 'mr-1'
                                }) }}
                            </a>
                        </div>
                    </div>
                    <div id="licencesBlock" class="transition-all duration-500 ease-in-out my-30">
                        <div class="flex flex-wrap content-center">
                            {% for licence in formations.licences %}
                                <div class="m-1">
                                    <button class="rounded-full text-bas font-medium justify-end align-middle border-2 py-1.5 px-4  border-gray-300 text-gray-300 hover:bg-gray-300 hover:text-gray-200"
                                    >
                                    <small>{{ licence.name }}</small>
                                    </button>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="mt-5">
                            <a href="#" class="text-sm font-bold flex justify-end align-middle text-teal-500  hover:text-teal-200 left-3 bottom-3">
                                Voir tous les licences
                                {{ ux_icon('gravity-ui:arrow-right', {
                                height: '20px', 
                                width: '20px', 
                                'aria-hidden': true,
                                'class': 'mr-1'
                                }) }}
                            </a>
                        </div>
                    </div>
                    <div id="mastersBlock" class="transition-all duration-500 ease-in-out my-30">
                        <div class="flex flex-wrap content-center">
                            {% for master in formations.masters %}
                                <div class="m-1">
                                    <button class="rounded-full text-bas font-medium justify-end align-middle border-2 py-1.5 px-4  border-gray-300 text-gray-300 hover:bg-gray-300 hover:text-gray-200">
                                    <small>{{ master.name }}</small>
                                    </button>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="mt-5">
                            <a href="#" class="text-sm font-bold flex justify-end align-middle text-teal-500  hover:text-teal-200 left-3 bottom-3">
                                Voir tous les masters   
                                {{ ux_icon('gravity-ui:arrow-right', {
                                height: '20px', 
                                width: '20px', 
                                'aria-hidden': true,
                                'class': 'mr-1'
                                }) }}
                            </a>
                        </div>
                    </div>
                    <div id="diplomesFiliereBlock" class="transition-all duration-500 ease-in-out my-30">
                        <div class="flex flex-wrap content-center">
                            {% for diplomeFiliere in formations.diplomesFiliere %}
                                <div class="m-1">
                                    <button class="rounded-full text-bas font-medium justify-end align-middle border-2 py-1.5 px-4  border-gray-300 text-gray-300 hover:bg-gray-300 hover:text-gray-200">
                                    <small>{{ diplomeFiliere.name }}</small>
                                    </button>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="mt-5">
                            <a href="#" class="text-sm font-bold flex justify-end align-middle text-teal-500  hover:text-teal-200 left-3 bottom-3">
                                Voir tous les diplômes par filière
                                {{ ux_icon('gravity-ui:arrow-right', {
                                height: '20px', 
                                width: '20px', 
                                'aria-hidden': true,
                                'class': 'mr-1'
                                }) }}
                            </a>
                        </div>
                    </div>
                    <div id="typesEtablissementBlock" class="transition-all duration-500 ease-in-out my-30">
                        <div class="flex flex-wrap content-center">
                            {% for typeEtablissement in formations.typesEtablissement %}
                                <div class="m-1">
                                    <button class="rounded-full text-bas font-medium justify-end align-middle border-2 py-1.5 px-4  border-gray-300 text-gray-300 hover:bg-gray-300 hover:text-gray-200">
                                    <small>{{ typeEtablissement.name }}</small>
                                    </button>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="mt-5">
                            <a href="#" class="text-sm font-bold flex justify-end align-middle text-teal-500  hover:text-teal-200 left-3 bottom-3">
                                Voir tous les types d'établissement
                                {{ ux_icon('gravity-ui:arrow-right', {
                                height: '20px', 
                                width: '20px', 
                                'aria-hidden': true,
                                'class': 'mr-1'
                                }) }}
                            </a>
                        </div>
                    </div>
                    <div id="formationFiliereBlock" class="transition-all duration-500 ease-in-out my-30">
                        <div class="flex flex-wrap content-center">
                            {% for formationFiliere in formations.formationsFiliere %}
                                <div class="m-1">
                                    <button class="rounded-full text-bas font-medium justify-end align-middle border-2 py-1.5 px-4  border-gray-300 text-gray-300 hover:bg-gray-300 hover:text-gray-200">
                                    <small>{{ formationFiliere.name }}</small>
                                    </button>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="mt-5">
                            <a href="#" class="text-sm font-bold flex justify-end align-middle text-teal-500  hover:text-teal-200 left-3 bottom-3">
                                Voir tous les formations par filière
                                {{ ux_icon('gravity-ui:arrow-right', {
                                height: '20px', 
                                width: '20px', 
                                'aria-hidden': true,
                                'class': 'mr-1'
                                }) }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </figure>
    </div>
    <!-- Sección 4 -->
    <div class="h-full snap-start bg-gray-200">Sección 4</div>
    
    <!-- Sección 5 -->
    <div class="h-full snap-start bg-purple-200">Sección 5</div>
</div>

{% endblock %}
